<!-- the form is the same for the new and edit, so it can be used as a partial -->
<div class="container">
<!-- checks if any errors in form submission. then shows error messages to user-->
<!-- if blank and/or too short, user will be prompted - based on validations -->
  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
  <% end %>
      </ul>

  <div class="row justify-content-center">
    <div class="col-10">
  <!-- this ensures that the form shows the existing information of the article, so can edit -->
  <!-- it looks at which model. we use the instance variable -->
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local:true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "enter title here" %>
        </div>
      </div>


      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "enter description here"%>
        </div>
      </div>

     <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg"%>
      </div>
    <% end %>
    </div>
   <div class= "btn btn-outline-dark btn-lg"><%= link_to ' Return to article listings', articles_path, class: "text-info" %>
   </div>
  </div>
</div>
